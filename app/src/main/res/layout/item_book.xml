<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    android:backgroundTint="#E8B6FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:layout_marginEnd="10dp"
            android:src="@drawable/bookss"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/txtSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID: 1"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtTenSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TenSach"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtTacGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tacgia"
                android:textStyle="italic"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/txtGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textStyle="italic|bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"

            android:layout_weight="1"
            android:src="@drawable/baseline_edit_24"
            android:id="@+id/imvEdit"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_delete_24"
            android:id="@+id/imvDelete"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>